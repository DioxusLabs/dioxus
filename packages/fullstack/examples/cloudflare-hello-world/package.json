{
  "name": "cloudflare-workers-hello-world",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "dx build --platform web --features web --skip-assets",
    "serve": "wrangler pages dev --compatibility-date 2024-01-29 --proxy 8080 --script-path dist/_worker.js -- dx serve --platform web --features web",
    "build": "npm run build:web && npm run build:server",
    "build:web": "dx build --platform web --features web --release",
    "build:server": "cargo install -q worker-build && worker-build --features server",
    "deploy": "wrangler pages deploy --project-name dioxus-fullstack-hello-world dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "wrangler": "^3.28.1"
  }
}
